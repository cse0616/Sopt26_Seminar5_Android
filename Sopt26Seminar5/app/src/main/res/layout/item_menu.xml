<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/mc_menu_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/menu_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버거"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@+id/menu_image"
        app:layout_constraintTop_toTopOf="@+id/menu_image"/>

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="허니 크림 상하이 버거 세트"
        android:textColor="#262626"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/menu_sort"
        app:layout_constraintTop_toBottomOf="@id/menu_sort"
         />

    <TextView
        android:id="@+id/menu_gram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="242g"
        android:textColor="#818181"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/menu_sort"
        app:layout_constraintTop_toBottomOf="@id/menu_name"
         />
    <TextView
        android:id="@+id/menu_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="554kcal"
        android:textSize="12sp"
        android:textColor="#818181"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/menu_gram"
        app:layout_constraintTop_toTopOf="@id/menu_gram"
         />
    <View
        android:id="@+id/underLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#d1d1d1"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/menu_image"
        app:layout_constraintStart_toStartOf="@id/menu_image"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>